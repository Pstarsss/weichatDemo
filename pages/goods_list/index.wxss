/* pages/goods_list/index.wxss */
.goods_tabs{
  display: flex;
  justify-items: center;
  align-items: center;
}
.goods_tabs-item{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  transition:all 0.3s;
}
.active{
  border-bottom:1px solid red;
  color:red;
}
.product_content-container{
  display: flex;
  flex-direction: column;
}
.goods_item{
  display:flex;
  justify-content: center;
  align-items:center;
  padding:15rpx;
  border-bottom:1px solid #ccc;
}
.goods_item-img{
  flex-grow:1;
  display:flex;
  justify-content: center;
  align-items: center;
}
.goods_item-img > image{
  width: 60%;
}
.goods_item-info{
  flex:2;
  display: flex;
  flex-direction: column;
 
}
.goods_item-infoName{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.goods_item-infoPrice{
  color:red;
  text-align:right;
}
